{
    "swagger": "2.0",
    "info": {
        "description": "${api_description}",
        "version": "1.0",
        "title": "${deployment_name} API"
    },
    "basePath": "/",
    "paths": {
        "/item": {
            "post": {
                "summary": "Add or update a list item",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "description": "List item to be added",
                    "required": true,
                    "schema": {"$ref": "#/definitions/Item"}
                }],
                "responses": {
                    "200": {
                        "description": "Successfully added",
                        "schema": {"$ref": "#/definitions/Item"}
                    },
                    "405": {"description": "Invalid input"}
                },
                "x-amazon-apigateway-integration" : {
                    "type" : "aws_proxy",
                    "uri" : "${lambda_put_item_invoke_uri}",
                    "httpMethod" : "POST",
                    "credentials" : "${lambda_exec_role_arn}"
                }
            },
            "get": {
                "summary": "Get all list items",
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Successfully fetched",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Item"
                            }
                        }
                    }
                },
                "x-amazon-apigateway-integration" : {
                    "type" : "aws_proxy",
                    "uri" : "${lambda_get_all_invoke_uri}",
                    "httpMethod" : "POST",
                    "credentials" : "${lambda_exec_role_arn}"
                }
            }
        }
    },
    "definitions": {
        "Item": {
            "type": "object",
            "required": ["name"],
            "properties": {
                "name": {"type": "string"},
                "count": {"type": "integer"}
            }
        }
    }
}